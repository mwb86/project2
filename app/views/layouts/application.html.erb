<!DOCTYPE html>
<html>
  <head>
    <title>RacquetballRi</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="home">
    <div id="sidebar">
      <div id="logo">
        <%= link_to root_path do %>
          <%= image_tag "http://robdedel.nl/wpimages/wpb1d1b61a.gif" %>
          <% end %>
      </div>
      <h1>Racquetball RI</h1>
    </div>
        <button><%= link_to "All Posts", root_path %></button>
  </div>
  <% flash.each do |name, msg| %>
    <%= content_tag(:div, msg, class: "alert") %>
    <% end %>

    <div class ="yields"><%= yield %></div>
  </body>
</html>
